<UserControl x:Class="Me.Amon.Apwd.Win.Wiz.FileCmp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="23" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <TextBox Name="TbData" Height="23" Margin="0,0,48,0" VerticalAlignment="Top" GotFocus="TbData_GotFocus" />
        <Button Name="SaveasBtn" Height="19" HorizontalAlignment="Right" Margin="0,2,24,0" VerticalAlignment="Top" Width="19" Click="SaveasBtn_Click" ToolTipService.ToolTip="下载文件">
            <Image Name="SaveasImg" Source="/img/att/file-saveas.png"/>
        </Button>
        <Button Name="UploadBtn" Height="19" HorizontalAlignment="Right" Margin="0,2,0,0" VerticalAlignment="Top" Width="19" Click="UploadBtn_Click" ToolTipService.ToolTip="上传文件">
            <Image Name="UploadImg" Source="/img/att/file-upload.png"/>
        </Button>
    </Grid>
</UserControl>
