<UserControl x:Class="Me.Amon.Win.Wiz.PassCmp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="23" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <PasswordBox Name="TbData" Height="23" VerticalAlignment="Top" Margin="0,0,72,0" GotFocus="TbData_GotFocus" />
        <Button Name="MaskBtn" Height="18" HorizontalAlignment="Right" Margin="0,2,48,0" VerticalAlignment="Top" Width="18" Click="MaskBtn_Click" ToolTipService.ToolTip="显示隐藏口令">
            <Image Name="MaskImg" Source="/img/att/pass-mask.png" />
        </Button>
        <Button Name="GenBtn" Height="18" HorizontalAlignment="Right" Margin="0,2,24,0" VerticalAlignment="Top" Width="18" Click="GenBtn_Click" ToolTipService.ToolTip="生成随机口令">
            <Image Name="GenImg" Source="/img/att/pass-gen.png" />
        </Button>
        <Button Name="OptBtn" Height="18" HorizontalAlignment="Right" Margin="0,2,0,0" VerticalAlignment="Top" Width="18" Click="OptBtn_Click" ToolTipService.ToolTip="选项">
            <Image Name="OptImg" Source="/img/att/pass-opt.png" />
        </Button>
    </Grid>
</UserControl>
